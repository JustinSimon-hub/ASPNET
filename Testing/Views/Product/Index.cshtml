@using Testing.Models
@model IEnumerable<Testing.Models.Products>

<h2>Products</h2>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Price</th>
        <th>Category ID</th>
        <th>On Sale</th>
        <th>Stock Level</th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
           @*Added to link the product id to the correct view, changeed from the code that was inside of step 1.*@
            <td><a href=/Product/ViewProduct/@product.ProductID>@product.ProductID</a></td>

            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.CategoryID</td>
            <td>@product.OnSale</td>
            <td>@product.StockLevel</td>
        </tr>

    }
</table>
